<h6 class="centrify">Login to Continue</h6>
<div class="centrify pt-2">
	<svg xmlns="http://www.w3.org/2000/svg" class="icon64" viewBox="-3 -3 30 30"><path class="energy" fill="#f44336" d="M10 18.16l.65-5.16h-1.9a.75.75 0 01-.62-1.18l4.5-6.5c.45-.65 1.48-.24 1.36.54L13.37 10h1.88c.58 0 .94.64.64 1.14l-4.5 7.5c-.41.69-1.48.32-1.38-.48z"/><path fill="#607d8b" d="M1.5 12a10.51 10.51 0 0116.23-8.8l-1.51 1.52A.75.75 0 0016.75 6h4.5c.41 0 .75-.34.75-.75V.75c0-.67-.8-1-1.28-.53l-1.91 1.91A12.01 12.01 0 00.5 15.46a.75.75 0 101.44-.43c-.3-.98-.45-2-.45-3.03z" class="arrow-1"/><path fill="#607d8b" d="M23.49 8.53a.75.75 0 10-1.44.43A10.48 10.48 0 016.28 20.8l1.5-1.52A.75.75 0 007.25 18h-4.5a.75.75 0 00-.75.76l.05 4.5c0 .66.82.99 1.28.52l1.88-1.9A12.01 12.01 0 0023.5 8.53z" class="arrow-2"/></svg>
</div>


<div class="card">
	<div class="card-header">
		<h2>Sign up</h2>
	</div>

	<div class="card-body">
		<div class="row">
			<div class="col-md-8">
				<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
					<%= f.error_notification %>

					<%= f.label :email, class: 'width-100' do %>
						<div class="form-group row">
							<div class="text-success col-md-2">Email</div>
							<div class="col-md-10">
								<%= f.text_field :email, required: true, autofocus: true,
									input_html: { autocomplete: "email" },
									class: 'form-control shadow-sm rounded',
									placeholder: 'Email address'
								%>
							</div>
						</div>
					<% end %>

					<%= f.label :password, class: 'width-100' do %>
						<div class="form-group row">
							<div class="text-success col-md-2">Password</div>
							<div class="col-md-10">
								<%= f.password_field :password,
									required: true,
									hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
									class: 'form-control shadow-sm rounded',
									input_html: { autocomplete: "new-password" },
									placeholder: 'Password'
								%>
							</div>
						</div>
					<% end %>

					<%= f.label :password, class: 'width-100' do %>
						<div class="form-group row">
							<div class="text-success col-md-2">Confirm Password</div>
							<div class="col-md-10">
								<%= f.password_field :password_confirmation,
									required: true,
									input_html: { autocomplete: "new-password" },
									class: 'form-control shadow-sm rounded',
									placeholder: 'Confirm Password'
								%>
							</div>
						</div>
					<% end %>

					<div class="form-actions">
						<%= f.button :submit, "Sign up" %>
					</div>
				<% end %>
			</div>

			<div class="col-md-1">
				<div class="divider-horizontal">
					<div class="line"></div>
					<div class="wordwrapper">
						<div class="word">OR</div>
					</div>
				</div>
			</div>

			<div class="col-md-3">
				<div class="vh-center">
					<%= link_to new_user_session_path, class: "signup-btn" do %>
						<%= image_tag 'signup.svg' %>
						Log In
					<% end %>
				</div>
			</div>
		</div>

		<%= render "devise/shared/links" %>
	</div>
</div>
